PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/dhon

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# OAuth2 (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
